<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@android:color/background_light">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Acceso Pokemon"
            android:id="@+id/textView8"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:textSize="23dp"
            android:textColor="#93000000"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:id="@+id/imageView2"
            android:background="@drawable/llave2"
            android:layout_gravity="center_horizontal" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/edtnombre"
            android:hint="Nombre pokemon"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:textSize="18dp"
            android:textColorHint="#ff45adff"
            android:layout_marginTop="8dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:id="@+id/edttipo"
            android:hint="Tipo pokemon"
            android:inputType="textPassword"
            android:layout_below="@+id/edtnombre"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:textColorHint="#ff45adff"
            android:textSize="18dp" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="250dp"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal">

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btniniciar"
                    android:background="@drawable/iniciar"
                    android:layout_weight="1"
                    android:layout_marginRight="10dp"
                    android:onClick="iniciar"
                    android:layout_gravity="center_vertical" />

                <ImageButton
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:id="@+id/btnBorrar"
                    android:layout_weight="1"
                    android:background="@drawable/borrar"
                    android:layout_marginLeft="10dp"
                    android:onClick="borrar"
                    android:layout_gravity="center_vertical" />

            </LinearLayout>
        </LinearLayout>

        <ImageButton
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:id="@+id/btnsalir"
            android:background="@drawable/salir"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:onClick="salir"/>

    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:id="@+id/imageView"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/fondopokemon"
        android:layout_weight="4" />

</LinearLayout>


